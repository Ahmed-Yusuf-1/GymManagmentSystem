<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymManagmentSystem.AddMemberPage"
             Title="AddMemberPage">
    <VerticalStackLayout>
        <Label Text="Add New Member" FontSize="20" VerticalOptions="Center" HorizontalOptions="Center" />

        <Entry x:Name="NameEntry" Placeholder="Enter Name" />
        
        <Entry x:Name="PlanEntry" Placeholder="Enter Membership Plan" />

        <Button Text="Add Member" Clicked="OnAddMemberClicked"/>
        
    </VerticalStackLayout>
</ContentPage>