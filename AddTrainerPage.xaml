<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymManagmentSystem.AddTrainerPage"
             Title="AddTrainerPage">
    <VerticalStackLayout>
        <Label Text="Add New Trainer" FontSize="20" HorizontalOptions="Center" />

        
        <Entry x:Name="NameEntry" Placeholder="Enter Trainer Name" />

        
        <Entry x:Name="SpecializationEntry" Placeholder="Enter Specialization" />

        
        <Button Text="Add Trainer" Clicked="OnAddTrainerClicked" />
    </VerticalStackLayout>
</ContentPage>