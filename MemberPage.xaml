<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymManagmentSystem.MemberPage"
             Title="Member Page">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Back" Clicked="OnDashboardClicked" />
    </ContentPage.ToolbarItems>

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label 
            Text="Manage Gym Members"
            FontSize="20"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button WidthRequest="200" Text="Add Member" Clicked="OnAddMemberClicked" />

        <ListView x:Name="MemberListView" ItemsSource="{Binding Members}" Margin="0,20,0,0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" Detail="{Binding MembershipPlan}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button WidthRequest="200" Text="View Members" Clicked="OnViewMembersClicked" />
    </VerticalStackLayout>
</ContentPage>