<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymManagmentSystem.MainPage">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Gym Managment System" FontSize="24" HorizontalOptions="Center"/>

        <Button WidthRequest="200" Text="Manage Members" Clicked="OnMembersClicked" />
        <Button WidthRequest="200" Text="Manage Trainers" Clicked="OnTrainersClicked" />
        <Button WidthRequest="200" Text="Manage Bookings" Clicked="OnBookingsClicked" />
        <Button WidthRequest="200" Text="Manage Equipment" Clicked="OnEquipmentClicked" />
    </VerticalStackLayout>
    

</ContentPage>
